<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <property name="charset" value="UTF-8"/>
    <property name="severity" value="error"/>

    <module name="TreeWalker">
        <!-- 禁止使用 System.out 和 System.err 和 e.printStackTrace -->
        <module name="RegexpSinglelineJava">
            <property name="format" value="System\.(out|err)\.print|e\.printStackTrace"/>
            <property name="message" value="禁止使用 System.out/err，请使用 com.intellij.openapi.diagnostic.Logger"/>
            <property name="ignoreComments" value="true"/>
        </module>
        <!-- 要求ApplicationManager.getApplication().invokeLater 而不是 SwingUtilities.invokeLater 进行 EDT 操作 -->
        <module name="RegexpSinglelineJava">
            <property name="format" value="SwingUtilities\.invokeLater"/>
            <property name="message" value="请使用 ApplicationManager.getApplication().invokeLater 替代 SwingUtilities.invokeLater"/>
            <property name="ignoreComments" value="true"/>
        </module>
    </module>
</module>
